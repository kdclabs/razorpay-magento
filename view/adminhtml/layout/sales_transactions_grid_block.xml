<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="sales.transactions.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column" name="verify_txn" as="verify_txn">
                <arguments>
                        <argument name="header" xsi:type="string" translate="true">Verify Transaction</argument>
                        <argument name="type" xsi:type="string">action</argument>
                        <argument name="filter" xsi:type="boolean">false</argument>
                        <argument name="sortable" xsi:type="boolean">false</argument>
                        <argument name="index" xsi:type="string">transaction_id</argument>
                        <argument name="is_system" xsi:type="boolean">true</argument>
                        <argument name="renderer" xsi:type="string">Razorpay\Magento\Ui\Component\Listing\Columns\Verify</argument>
                        <argument name="header_css_class" xsi:type="string">col-actions</argument>
                        <argument name="column_css_class" xsi:type="string">col-actions</argument>
                    </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
